<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="nombre_producto"
                android:textColor="@color/dark_coffee"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="precio_pro"
                android:textAlignment="textEnd"
                android:textColor="@color/medium_wood"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="marca_producto"
                android:textColor="@color/medium_wood"
                android:textSize="14sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@color/border_taupe" />

            <TextView
                android:id="@+id/tvProductCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="categoria_producto"
                android:textColor="@color/medium_wood"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvProductSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="talla_producto"
                android:textColor="@color/dark_coffee"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvProductStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="stock_producto"
                android:textColor="@color/dark_coffee"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvProductCost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="costo_producto"
                android:textAlignment="textEnd"
                android:textColor="@color/dark_coffee"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Botones de agregar/eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/btnRemoveItem"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/warning_soft_orange"
                android:contentDescription="Quitar item"
                android:src="@android:drawable/ic_delete" />

            <ImageButton
                android:id="@+id/btnAddItem"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/success_soft_green"
                android:contentDescription="Agregar item"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/Cant"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="Cant:"
                android:textColor="@color/dark_coffee"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:text="0"
                android:textColor="@color/dark_coffee"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvLowStockWarning"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@color/warning_soft_orange"
            android:padding="4dp"

            android:text="STOCK BAJO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>