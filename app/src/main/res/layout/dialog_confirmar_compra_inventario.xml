<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/dark_caramel"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
>

    <!-- Título del diálogo -->
    <TextView
        android:id="@+id/tvTituloCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Compra"
        android:textColor="@color/light_cream"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Detalles de la compra -->
    <TextView
        android:id="@+id/tvDetallesCompraInventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_cream"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- Total de la compra -->
    <TextView
        android:id="@+id/tvTotalCompraInventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_cream"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginBottom="24dp"/>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnCancelarCompraInventario"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:backgroundTint="@color/warning_soft_orange"/>

        <Button
            android:id="@+id/btnConfirmarCompraInventario"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:backgroundTint="@color/success_soft_green"/>
    </LinearLayout>
</LinearLayout>